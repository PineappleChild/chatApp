}

p {
  background-color: #F8F8F8;
  border-radius: 7px;
  padding: 2px;
  margin: 3px;
}

p:nth-of-type(odd) {
  background-color: gray;
  color: white;
  border-radius: 7px;
  padding: 2px;
  margin: 3px;
}

